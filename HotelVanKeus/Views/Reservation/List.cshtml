@model List<HotelVanKeus.Models.Reservation>;

<h3>List of Reservations:</h3>

<hr class="my-2" />

<div>
    <table class="table table-hover">
        <thead>
            <tr>
                <th scope="col">Reservation Id</th>
                <th scope="col">Guest First Name</th>
                <th scope="col">Guest Last Name</th>
                <th scope="col">Room Number</th>
                <th scope="col">Checkin</th>
                <th scope="col">Checkout</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var reservation in Model)
            {
                <tr class="table-primary">
                    <td>@reservation.ReservationId</td>
                    <td>@reservation.Guest.FirstName</td>
                    <td>@reservation.Guest.LastName</td>
                    <td>@reservation.ReservationRoom.Room.RoomNumber</td>
                    <td>@reservation.Checkin</td>
                    <td>@reservation.Checkout</td>

                    <td>
                        <a asp-action="edit" asp-route-id="@reservation.ReservationId" type="button" class="btn-sm btn-warning">Edit</a>
                        <a asp-action="delete" asp-route-id="@reservation.ReservationId" type="button" class="btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


