@model HotelVanKeus.Models.Guest;

<h3>Add a new guest:</h3>

<form method="post" class="form-group" asp-action="create">
    <div class="row">
        <div class="form-group col">
            <label class="col-form-label">First name</label>
            <input type="text" class="form-control" asp-for="FirstName" required>
            <span asp-validation-for="FirstName" class="text-warning"></span>
        </div>

        <div class="form-group col">
            <label class="col-form-label">Last name</label>
            <input type="text" class="form-control" asp-for="LastName" id="lastNameInput" required>
            <span asp-validation-for="LastName" class="text-warning"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col">
            <label class="col-form-label">Telephone</label>
            <input type="number" class="form-control" asp-for="Telephone" required>
            <span asp-validation-for="Telephone" class="text-warning"></span>
        </div>

        <div class="form-group col">
            <label class="col-form-label">Email</label>
            <input type="text" class="form-control" asp-for="Email" id="emailInput" required>
            <span asp-validation-for="Email" class="text-warning"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col">
            <label class="col-form-label">Address</label>
            <input type="text" class="form-control" asp-for="Address" required>
            <span asp-validation-for="Address" class="text-warning"></span>
        </div>

        <div class="form-group col">
            <label class="col-form-label">Postcode</label>
            <input type="text" class="form-control" asp-for="Postcode" required>
            <span asp-validation-for="Postcode" class="text-warning"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col">
            <label class="col-form-label">City</label>
            <input type="text" class="form-control" asp-for="City" required>
            <span asp-validation-for="City" class="text-warning"></span>
        </div>

        <div class="form-group col">
            <label class="col-form-label">Country</label>
            <input type="text" class="form-control" asp-for="Country" required>
            <span asp-validation-for="Country" class="text-warning"></span>
        </div>
    </div>

    <footer style="float: right;">
        <button class="btn btn-success" type="submit">Add guest</button>
        <button class="btn btn-primary" asp-action="list">Cancel</button>
    </footer>
</form>

