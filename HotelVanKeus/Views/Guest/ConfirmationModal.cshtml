@model HotelVanKeus.Models.Guest

<div class="container">
    <p class="lead">The following reservation has been added/Edited successfully:</p>
    <div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">First Name</th>
                    <th scope="col">Last Name</th>
                    <th scope="col">Telephone</th>
                    <th scope="col">Email</th>
                    <th scope="col">Address</th>
                    <th scope="col">Postcode</th>
                    <th scope="col">City</th>
                    <th scope="col">Country</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-primary">
                    <td>@Model.Id</td>
                    <td>@Model.FirstName</td>
                    <td>@Model.LastName</td>
                    <td>@Model.Telephone</td>
                    <td>@Model.Email</td>
                    <td>@Model.Address</td>
                    <td>@Model.Postcode</td>
                    <td>@Model.City</td>
                    <td>@Model.Country</td>
                </tr>
            </tbody>
        </table>
    </div>

    <hr class="my-4" />

    <div style="float: right;">
        <a type="button" href="@Url.Action("List", "Guest")" class="btn btn-primary">Back to List</a>
    </div>

</div>
