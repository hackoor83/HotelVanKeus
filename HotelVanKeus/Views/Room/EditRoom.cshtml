@model HotelVanKeus.Models.Room;

<h3>Edit details of room Id: @Model.Id</h3>

<form method="post" class="form-group" asp-action="editroom">
    <input type="hidden" asp-for="Id" value="@Model.Id" />

    <div class="row">
        <div class="form-group col">
            <label class="col-form-label">Room Number</label>
            <input type="number" class="form-control" placeholder="Between 001 and 999" value="@Model.RoomNumber" asp-for="RoomNumber">
            <span asp-validation-for="RoomNumber" class="text-warning"></span>
        </div>

        <div class="form-group col">
            <label class="col-form-label">Room Size (persons)</label>
            <select class="form-control" asp-for="Size" value="@Model.Size" required>
                <option disabled selected hidden>Select..</option>
                <option>1</option>
                <option>2</option>
                <option>3 to 4</option>
                <option>5 to 6</option>
            </select>
            <span asp-validation-for="Size" class="text-warning"></span>
        </div>
    </div>

    <div class="row">
        <div class="form-group col">
            <label class="col-form-label">Room Type</label>
            <select class="form-control" asp-for="TypeRoom" value="@Model.TypeRoom" required>
                <option disabled selected hidden>Select..</option>
                <option>@HotelVanKeus.Models.TypeEnum.Budget</option>
                <option>@HotelVanKeus.Models.TypeEnum.Normal</option>
                <option>@HotelVanKeus.Models.TypeEnum.Luxury</option>
            </select>
            <span asp-validation-for="TypeRoom" class="text-warning"></span>
        </div>

        <div class="form-group col">
            <label class="col-form-label">Room Status</label>
            <select class="form-control" asp-for="Status" value="@Model.Status" required>
                <option disabled selected hidden>Select..</option>
                <option>@HotelVanKeus.Models.StatusEnum.Available</option>
                <option>@HotelVanKeus.Models.StatusEnum.Reserved for guest(s) </option>
                <option>Under @HotelVanKeus.Models.StatusEnum.Renovation</option>
            </select>
            <span asp-validation-for="Status" class="text-warning"></span>
        </div>
    </div>


    

    @*
        <button class="btn btn-success" type="submit" data-toggle="modal" data-target="roomAddedConfirmation" onclick="ConfirmationModal">Add Room</button>
    *@
    <footer style="float: right;">
        <button class="btn btn-success" type="submit">Save changes</button>
        <button class="btn btn-primary" asp-action="list">Cancel</button>
    </footer>
</form>


